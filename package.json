{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "description": "Node.js + TypeScript + Prisma + MongoDB + Express API Server",
  "main": "server.js",
  "author": "Francis Lagares",
  "license": "MIT",
  "scripts": {
    "start:dev": "yarn prisma:generate && yarn prisma:seed cross-env NODE_ENV=development && nodemon",
    "start": "yarn build && NODE_ENV=production && node dist/server.js",
    "build": "yarn build:clean && yarn build:tsc",
    "build:tsc": "tsc && tsc-alias",
    "build:clean": "rimraf dist; exit 0",
    "deploy:clean": "pm2 stop all && pm2 delete all",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev && pm2 logs all",
    "deploy:prod": "yarn build && pm2 start ecosystem.config.js --only prod",
    "prisma:init": "prisma init",
    "prisma:push": "dotenv -e .env.development.local -- npx prisma db push",
    "prisma:migrate": "dotenv -e .env.development.local -- npx prisma migrate dev --name init ",
    "prisma:seed": "dotenv -e .env.development.local -- npx prisma db seed",
    "prisma:generate": "prisma generate",
    "vitest": "dotenv -e .env.development.test -- npx vitest",
    "test": "TS_JEST_DISABLE_VER_CHECKER=true && jest --runInBand --watchAll --no-cache",
    "test:ci": "TS_JEST_DISABLE_VER_CHECKER=true && jest --runInBand",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint --ext js,jsx,ts,tsx --fix --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx|json|md)\" --write"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma",
    "seed": "ts-node --transpile-only src/prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.1.1",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.2.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.1",
    "prisma": "^5.1.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cookie-session": "^2.0.44",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.9",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "module-alias": "^2.2.3",
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tinyspy": "^2.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.1",
    "vitest-mock-extended": "^1.2.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.6.5"
  },
  "packageManager": "yarn@3.6.1"
}
