{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "description": "Node.js + TypeScript + Prisma + MongoDB + Express API Server",
  "main": "server.js",
  "author": "Francis Lagares",
  "license": "MIT",
  "scripts": {
    "start:dev": "yarn prisma:generate && yarn prisma:seed cross-env NODE_ENV=development && nodemon",
    "start": "yarn build && NODE_ENV=production && node dist/server.js",
    "build": "yarn build:clean && yarn build:tsc",
    "build:tsc": "tsc && tsc-alias",
    "build:clean": "rimraf dist; exit 0",
    "deploy:clean": "pm2 stop all && pm2 delete all",
    "deploy:dev": "pm2 start ecosystem.config.js --only dev && pm2 logs all",
    "deploy:prod": "yarn build && pm2 start ecosystem.config.js --only prod",
    "prisma:init": "prisma init",
    "prisma:push": "dotenv -e .env.development.local -- npx prisma db push",
    "prisma:migrate": "dotenv -e .env.development.local -- npx prisma migrate dev --name init ",
    "prisma:seed": "dotenv -e .env.development.local -- npx prisma db seed",
    "prisma:generate": "prisma generate",
    "vitest": "dotenv -e .env.development.test -- npx vitest",
    "test:ci": "vitest run",
    "test:watch": "vitest watch --ui",
    "test:coverage": "vitest run --coverage",
    "test:report": "npx vite preview --outDir ./coverage",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint --ext js,jsx,ts,tsx --fix --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx|json|md)\" --write",
    "prepare": "npx husky install"
  },
  "prisma": {
    "schema": "src/prisma/schema.prisma",
    "seed": "ts-node --transpile-only src/prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.6.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cookie-session": "^2.0.48",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.5",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.1",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "module-alias": "^2.2.3",
    "nodemon": "^3.0.1",
    "pm2": "^5.3.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tinyspy": "^2.2.0",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^0.34.6",
    "vitest-mock-extended": "^1.3.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.6.5"
  },
  "packageManager": "yarn@4.0.2"
}
